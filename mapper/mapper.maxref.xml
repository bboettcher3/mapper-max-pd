<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name="mapper">

	<digest>
		A libmapper device
	</digest>
	
	<description>
		A libmapper device in which signals can be added, removed, and connected to other libmapper signals on the network.
	</description>
	
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Joseph Malloch, Brady Boettcher</metadata>
		<metadata name="tag">libmapper</metadata>
	</metadatalist>
	
	<!--INLETS-->
	<inletlist>
		<inlet id="0" type="message">
			<digest>Adding/removing signals and setting their values.</digest>
		</inlet>
	</inletlist>

	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" type="message">
			<digest>Destination signal values when updated.</digest>
		</outlet>
		<outlet id="1" type="info">
			<digest>Device and status information.</digest>
		</outlet>
	</outletlist>
	
	<!--ARGUMENTS-->
	<objarglist>
		<objarg name="alias" optional="1" type="message">
			<digest>Device name, default is maxmsp.</digest>
		</objarg>
		<objarg name="def" optional="1" type="message">
			<digest>Previously made device definition.</digest>
		</objarg>
		<objarg name="learn" optional="1" type="int">
			<digest>Enable learn mode to automatically create signals from incoming data.</digest>
		</objarg>
		<objarg name="interface" optional="1" type="message">
			<digest>Network interface to use for the libmapper network.</digest>
		</objarg>
	</objarglist>
	
	<!--MESSAGES-->
	<methodlist>
		<method name="add">
			<arglist>
				<arg name="direction" optional="0" type="message" />
				<arg name="name" optional="0" type="message" />
				<arg name="@type" optional="0" type="message" />
				<arg name="@length" optional="1" type="message" />
				<arg name="@units" optional="1" type="message" />
				<arg name="@min" optional="1" type="message" />
				<arg name="@max" optional="1" type="message" />
			</arglist>
			<digest>
				Adds a new signal.
			</digest>
			<description>
				Adds a new signal to the device. e.g., "add input in1 @type int @length 2 @units meters @min 0 @max 10"
			</description>
		</method>
		<method name="remove">
			<arglist>
				<arg name="direction" optional="0" type="message" />
				<arg name="name" optional="0" type="message" />
			</arglist>
			<digest>
				Removes a signal from the device.
			</digest>
			<description>
				Removes a signal from the device. e.g., "remove input in1"
			</description>
		</method>
		<method name="clear">
			<arglist>
			</arglist>
			<digest>
				Clears all signals from the device.
			</digest>
			<description>
				Clears all signals from the device.
			</description>
		</method>
	</methodlist>
	
	<!--SEEALSO-->
	<seealsolist>
		<seealso name="mpr_device"/>
		<seealso name="mpr_in"/>
		<seealso name="mpr_out"/>
	</seealsolist>
	
</c74object>